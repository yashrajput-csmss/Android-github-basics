secret = int(input("Put a number between 1 to 10 as secret: "))
print("Now give device to Player 2")

answer = input("Are you Player 2? (yes/no): ").lower().strip()

if answer == "yes":
    print("Ok!!! Let's start")
else:
    print("Program stopped")
    exit()

while True:
    guess = int(input("Guess a number between 1 to 10: "))

    if guess < secret:
        print("Too low, try again")
    elif guess > secret:
        print("Too high, try again")
    else:
        print("Congrats! You guessed it right")
        break
        
